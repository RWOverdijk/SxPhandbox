<script>
    var editor      = ace.edit("editor");
    var outputDiv   = $('#output');
    var reqTo, reqAct;
    var stMessage   = $('#toolbar .status-message');
    var filename    = $('#filename');
    var snippets    = $('#snippet-list');
    editor.setTheme("ace/theme/monokai");
    editor.getSession().setMode("ace/mode/php");
    editor.getSession().on('change', function(e) {
        clearTimeout(reqTo);
        reqTo = setTimeout(function() {
            $.get('/execute', {
                pcode: editor.getValue(),
                filename: $('#filename').val()
            }, function(data) {
                editor.getSession().clearAnnotations();
                if (data.status === 'error') {
                    editor.getSession().setAnnotations(data.annotations);
                } else {
                    outputDiv.html(data.content);
                }
            }, 'json');
        }, 300);
    });

    var actions = {};
    var statusMessage = function(txt) {
        stMessage.text(txt);
        setTimeout(function() {
            stMessage.fadeOut('fast', function() {
                $(this).text('');
                $(this).show();
            });
        }, 3000);
    };

    var mkReq = function(action, data, cb) {
        clearTimeout(reqAct);
        reqAct = setTimeout(function() {
            $.get('/'+action, data, cb, 'json');
        }, 300);
    };

    actions.save = function(data) {
        mkReq('save', {filename: filename.val(), pcode : editor.getValue()}, function() {
            statusMessage('Code saved!');
            $('<option />').val(filename.val()).text(filename.val()).appendTo(snippets);
            snippets.val(filename.val());
        });
    };

    actions.load = function(data) {
        mkReq('load', {filename: $('#snippet-list').val()}, function(data) {
            $('#filename').val(snippets.val());
            editor.setValue(data.code);
            statusMessage('Code loaded!');
        });
    };

    $('#toolbar button').on('click', function() {
        var action = $(this).data('action');
        actions[action]();
    });
</script>
